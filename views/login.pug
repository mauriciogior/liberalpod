extends parts/layout.pug
block title
	| Login

block content
	link(rel='stylesheet', href='/css/login.css')

	body.text-center
		#app
			form.form-signin(method='post', action='/login', v-on:submit.prevent='login')
				img.mb-4(src='https://getbootstrap.com/docs/4.0/assets/brand/bootstrap-solid.svg', alt, width='72', height='72')
				h1.h3.mb-3.font-weight-normal Please sign in!
				.form-group
					label.sr-only(for='inputEmail') Email address
					input(type='email', v-model='email', :class='{\'form-control\':true, \'is-invalid\':error != \'\'}', placeholder='Email address', required, autofocus)
					.invalid-feedback(v-if='error != \'\'', v-text='error')
				.form-group
					label.sr-only(for='inputPassword') Password
					input.form-control(type='password', v-model='password', placeholder='Password', required)
				button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
